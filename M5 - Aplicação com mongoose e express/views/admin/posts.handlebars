<h2>Lista de postagens</h2>
<hr>
<a href="/admin/posts/add"><button class="btn btn-success">Add post</button>  </a>
{{#each posts}}
    <div class="card mt-4">
        <div class="card-body mt-2">
            <h4>{{titulo}}</h4>
            <small>Descrição: {{descricao}}</small><br>
            <div class="card">
                <div class="card-body">
                    <p>{{conteudo}}</p>
                </div>
            </div>
            <small>Categoria: {{categoria.nome}}</small><br>            
            <small>Data de criação: {{data}}</small><br>
            <a href="/admin/posts/edit/{{_id}}"><button class="btn btn-success mt-4">Edit</button></a>
        </div>
    </div>
{{else}}
    <h4 class="mt-4">Nenhuma postagem resgistrada</h4>
{{/each}}