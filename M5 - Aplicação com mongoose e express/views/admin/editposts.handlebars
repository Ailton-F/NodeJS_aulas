{{#each error}}
    <div class="alert alert-danger">{{text}}</div>
{{else}}
{{/each}}
<div class="card">
    <div class="card-body">
        <h2>Editar post</h2>
        <form action="/admin/posts/edit" method="post">
        <input type="hidden" value="{{post._id}}" name="id">
            <label for="titulo" class="mt-2">Título:</label>
            <input type="text" name="titulo" id="titulo" class="form-control" required value="{{post.titulo}}">
            <label for="slug" class="mt-2">Slug:</label>
            <input type="text" name="slug" id="slug" class="form-control" required value="{{post.slug}}">
            <label for="desc" class="mt-2">Descrição:</label>
            <input type="text" name="desc" id="desc" class="form-control" required value="{{post.descricao}}">
            <label for="conteudo" class="mt-2">Conteúdo:</label> <br>
            <textarea name="conteudo" id="conteudo" class="form-control" required >{{post.conteudo}}</textarea> <br>
            <label for="categoria">Categoria:</label>
            <select class="form-select" name="categoria" id="categoria">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria resgistrada</option>
                {{/each}}
            </select>
            <button class="btn btn-success mt-4" type="submit">Editar post</button>
        </form>
        <form action="/admin/post/edit/delet" method="post">
            <input type="hidden" name="id" value="{{post._id}}">  
            <button type="submit" class="btn btn-danger mt-2">Deletar</button>
        </form>
    </div>
</div>