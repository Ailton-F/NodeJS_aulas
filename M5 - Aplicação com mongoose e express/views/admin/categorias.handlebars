<h2>Lista de categorias</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Add categoria</button>  </a>
{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body mt-2">
            <h4>{{nome}}</h4>
            <small>{{slug}}</small> <br>
            <small>Data de criação: {{date}}</small>
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success">Edit</button></a>
        </div>
    </div>
{{else}}
{{/each}}