<div class="card">
    <div class="card-body">
        <h2 class="display-4">Login</h2>
            <form action="/user/login" method="post">
                <label for="email" class="mt-4">Email: </label>
                <input type="text" name="email" class="form-control" required>
                <label for="senha" class="mt-4">Senha: </label>
                <input type="password" name="senha" class="form-control" required> <br>
                <button class="btn btn-primary" type="submit">Login</button><br><br>
                <a href="/user/registro" ><small>Ainda não tem uma conta? Clique aqui e faça seu registro!</small></a>
            </form>
    </div>
</div>